datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}
//Here is a declaration of user Table and it properties 
//configurations. 
model users {
  id        Int       @id @default(autoincrement())
  name             String
  email            String   @unique
  password         String 
  role             String
  createdAt DateTime  @default(now())
  updatedAt DateTime  @default(now()) @updatedAt

  @@map("users")
}